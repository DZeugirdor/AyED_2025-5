using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace _1_AlbinoM_tp9
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("dame un numero entero");
            string numero = Console.ReadLine();
            int entero;
            if (int.TryParse(numero, out entero) && entero >= 0)
            {
                Console.WriteLine("cuenta regresiva");


                for (int i = entero; i >=0; i--)
                {

                    Console.WriteLine(i);
                }
                Console.ReadKey();
            }
        }
    }
}
